---
const { projectName, description, techIcons } = Astro.props;
---
<script lang="ts">
    class ProjectCard extends HTMLElement{
        constructor(){
            super();
        }
    }

    customElements.define('project-card', ProjectCard);
</script>
<style lang="scss">
    .cascadiyaFont{
        font-family: 'CascadiyaCode';
    }
    project-card{
        $primary: #BB7A4F;
        $contrast:#161616;
        display: flex;
        flex-direction: column;
        gap:25px;
        background:$contrast;
        box-shadow: inset 0 3px 10px #47372D, -10px 40px 50px rgba(#000000,38%);
        border-radius: 50px 10px 50px 10px;
        padding: 25px; 
        max-width:500px;
        & > *{
            margin: 0;
        }
        h3{
            @extend .cascadiyaFont;
            font-size: 25px;
            color:var(--primary-color);
            margin-top: 20px;
        }
        p{
            @extend .cascadiyaFont;
            font-size: 16px;
            font-weight: 500;
            color:var(--primary-color);
        }
        .icons{
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            align-items: center;
            gap:20px;
            i{
                font-size: 25px;
                color:var(--primary-color);
            }
        }
        .actions{
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap:20px;
            button{
                cursor: pointer;
                transition: scale 0.2s ease-in-out;
                &:hover{
                    scale:1.04;
                }
            }
            button:nth-child(1){
                @extend .cascadiyaFont;
                background:$contrast;
                border: 1px solid $primary;
                padding: 10px 16px;
                border-radius: 10px;
                color:$primary;
                font-weight: 500;
            }
            button:nth-child(2){
                @extend .cascadiyaFont;
                background: $primary;
                border: 1px solid $primary;
                padding: 10px 16px;
                border-radius: 10px;
                color:$contrast;
                font-weight: 500;
            }
        }
        @media screen and (max-width: 850px) {
            max-width: calc((100vw / 2) - 160px);
        }
        @media screen and (max-width: 600px) {
            max-width: 100%;
        }
    }
</style>
<project-card>
    <h3>{projectName && projectName}</h3>
    <p>{description && description}</p>
    <div class="icons">
        {techIcons && techIcons.map((icon:string) => <i class={icon} />)}
    </div>
    <div class="actions">
        <button>More Info</button>
        <button>See Project</button>
    </div>
</project-card>